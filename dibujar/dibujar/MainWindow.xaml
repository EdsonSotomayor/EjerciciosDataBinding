<Window x:Class="dibujar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dibujar"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <InkCanvas x:Name="lienzo" HorizontalAlignment="Left" Height="386" VerticalAlignment="Top" Width="782">
            <StackPanel HorizontalAlignment="Left" Height="0" VerticalAlignment="Top" Width="0"/>
            <Label Content="Ella no te ama, entiendo"/>
            <InkCanvas.DefaultDrawingAttributes>
                <DrawingAttributes Color="DarkRed" Width="5" Height="20" FitToCurve="True" IsHighlighter="False"/>
          
            </InkCanvas.DefaultDrawingAttributes>
        </InkCanvas>
        <Button x:Name="btlimpiar" Content="Limpiar" HorizontalAlignment="Left" Margin="10,381,0,0" VerticalAlignment="Top" Width="88" Height="28" Click="Btlimpiar_Click"/>
        
    </Grid>
</Window>
